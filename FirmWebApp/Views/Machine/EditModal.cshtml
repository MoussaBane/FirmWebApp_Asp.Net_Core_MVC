<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="editModalLabel">Update The Current Machine</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"> 

                <form asp-controller="Machine" asp-action="EditModal" asp-route-id="@Model.MachineModel.Oid" method="post" class="form-horizontal" role="form">
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MachineModel.Oid" />
                        <div class="form-group">
                            <label asp-for="MachineModel.Code" class="control-label"></label>
                            <input asp-for="MachineModel.Code" class="form-control" />
                            <span asp-validation-for="MachineModel.Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MachineModel.Name" class="control-label"></label>
                            <input asp-for="MachineModel.Name" class="form-control" />
                            <span asp-validation-for="MachineModel.Name" class="text-danger"></span>
                        </div>
                        <!-- For Layout -->
                        <div class="form-group">
                            <label asp-for="MachineModel.LayoutOid" class="control-label"></label>
                            <select asp-for="MachineModel.LayoutOid" class="form-control">
                                @foreach (var layout in Model.ListOfLayouts)
                                {
                                    <option value="@layout.Oid">@layout.Name</option>
                                }
                            </select>
                            <span asp-validation-for="MachineModel.LayoutOid" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MachineModel.Width" class="control-label"></label>
                            <input asp-for="MachineModel.Width" class="form-control" />
                            <span asp-validation-for="MachineModel.Width" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MachineModel.Height" class="control-label"></label>
                            <input asp-for="MachineModel.Height" class="form-control" />
                            <span asp-validation-for="MachineModel.Height" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MachineModel.PositionX" class="control-label"></label>
                            <input asp-for="MachineModel.PositionX" class="form-control" />
                            <span asp-validation-for="MachineModel.PositionX" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MachineModel.PositionY" class="control-label"></label>
                            <input asp-for="MachineModel.PositionY" class="form-control" />
                            <span asp-validation-for="MachineModel.PositionY" class="text-danger"></span>
                        </div>
                        <!-- For RunningStatus -->
                        <div class="form-group">
                            <label asp-for="MachineModel.RunningStatus" class="control-label"></label>
                            <div class="form-check">
                                <input asp-for="MachineModel.RunningStatus" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="MachineModel.RunningStatus"></label>
                            </div>
                            <span asp-validation-for="MachineModel.RunningStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MachineModel.Info1" class="control-label"></label>
                            <input asp-for="MachineModel.Info1" class="form-control" />
                            <span asp-validation-for="MachineModel.Info1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MachineModel.Info2" class="control-label"></label>
                            <input asp-for="MachineModel.Info2" class="form-control" />
                            <span asp-validation-for="MachineModel.Info2" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-outline-primary">Save</button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


